<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.k.neleme">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".detail.DetailActivity"
            android:theme="@style/NoTitleTranslucentTheme" />
        <activity android:name=".detail.ShopDetailActivity" />
        <activity android:name=".Login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.LoginSuccessActivity" />
        <activity android:name=".Windows.WindowsActivity" />
        <activity android:name=".Login.RegisterActivity" />
        <activity android:name=".Windows.SettingActivity"></activity>
        <activity android:name="com.k.neleme.payui.MainActivity"> </activity>
    </application>

</manifest>